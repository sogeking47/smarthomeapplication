<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reminder_activity">

    <Button
        android:id="@+id/reminder_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="163dp"
        android:layout_marginBottom="286dp"
        android:text="Button" />

    <EditText
        android:id="@+id/editReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reminder_add_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="-21dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="97dp"
        android:ems="10"
        android:hint="Add Reminder"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/Remindertv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="436dp"
        android:layout_toStartOf="@+id/editReminder"
        android:text="TYPE REMINDER" />
</RelativeLayout>